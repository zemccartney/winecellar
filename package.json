{
  "name": "balliswine",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "allow-scripts": "node ./node_modules/@lavamoat/allow-scripts/src/cli.js --experimental-bins",
    "astro": "astro",
    "build": "npm run lavamoat:run astro check && astro build",
    "check": "astro check && npm run fmt:check && npm run lint",
    "deploy": "npm run build && wrangler deploy",
    "deps": "ncu -i --format group --cooldown 3",
    "fmt": "prettier . --write",
    "fmt:check": "prettier . --check",
    "info": "astro info",
    "lavamoat:config": "npm run allow-scripts auto",
    "lavamoat:debug": "npm run allow-scripts list",
    "lavamoat:run": "npm run allow-scripts run",
    "lavamoat:setup": "allow-scripts --experimental-bins setup",
    "lint": "eslint .",
    "lint:debug": "eslint --inspect-config",
    "new-wine": "node scripts/new-wine.js",
    "preview": "astro preview",
    "setup": "npm install && npm run lavamoat:run",
    "start": "concurrently --kill-others --names astro,ts -c red,blue \"astro dev\" \"npm run typewatch\"",
    "typewatch": "astro check --watch --preserveWatchOutput"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.8",
    "@astrojs/sitemap": "^3.6.0",
    "@fontsource-variable/noto-emoji": "^5.2.11",
    "@fontsource/geist-mono": "^5.2.7",
    "@fontsource/geist-sans": "^5.2.5",
    "@fontsource/permanent-marker": "^5.2.7",
    "@tailwindcss/vite": "^4.1.16",
    "astro": "^5.15.1",
    "clsx": "^2.1.1",
    "leaflet": "^1.9.4",
    "leaflet.markercluster": "^1.5.3",
    "lite-youtube-embed": "^0.3.3",
    "tailwindcss": "^4.1.16"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.5",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.38.0",
    "@eslint/json": "^0.13.2",
    "@lavamoat/allow-scripts": "^3.4.0",
    "@lavamoat/preinstall-always-fail": "^2.1.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/leaflet": "^1.9.21",
    "@types/leaflet.markercluster": "^1.5.6",
    "@typescript-eslint/parser": "^8.46.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-package-json": "^0.57.0",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-unicorn": "^61.0.2",
    "globals": "^16.4.0",
    "npm-check-updates": "^19.1.1",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "wrangler": "^4.45.0"
  },
  "engines": {
    "node": ">=22 <23"
  },
  "lavamoat": {
    "allowScripts": {
      "@lavamoat/preinstall-always-fail": false,
      "@tailwindcss/vite>@tailwindcss/oxide": true,
      "astro>esbuild": true,
      "astro>sharp": true,
      "wrangler>esbuild": true,
      "wrangler>miniflare>sharp": false,
      "wrangler>workerd": false
    },
    "allowBins": {
      "astro-check": "node_modules/@astrojs/check/dist/bin.js",
      "prettier": "node_modules/prettier/bin/prettier.cjs",
      "allow-scripts": "node_modules/@lavamoat/allow-scripts/src/cli.js",
      "astro": "node_modules/astro/astro.js",
      "concurrently": "node_modules/concurrently/dist/bin/concurrently.js",
      "conc": "node_modules/concurrently/dist/bin/concurrently.js",
      "eslint": "node_modules/eslint/bin/eslint.js",
      "eslint-config-prettier": "node_modules/eslint-config-prettier/bin/cli.js",
      "npm-check-updates": "node_modules/npm-check-updates/build/cli.js",
      "ncu": "node_modules/npm-check-updates/build/cli.js",
      "tsc": "node_modules/typescript/bin/tsc",
      "tsserver": "node_modules/typescript/bin/tsserver",
      "wrangler": "node_modules/wrangler/bin/wrangler.js",
      "wrangler2": "node_modules/wrangler/bin/wrangler.js"
    }
  }
}
